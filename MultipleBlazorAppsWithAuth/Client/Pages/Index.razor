@code
{
    void ToSecondClient()
    {
        NavigationManager.NavigateTo("https://blazor-multi-apps.azurewebsites.net/secondapp", true);
    }

    void To3Client()
    {
        NavigationManager.NavigateTo("https://blazor-multi-apps.azurewebsites.net/3app", true);
    }
}